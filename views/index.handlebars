<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>NPR Edition</p>
  </div>
  <a class="btn btn-primary" id="scrape">SCRAPE NEW ARTICLES</a>
</div>

<div id="articleArea">
<ul>
  {{#each article}}
  <div data-_id="{{this._id}}" class="card">
    <div class="card-header">
      <h4>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href={{this.link}}>{{this.title}}</a>
      </h4>
    </div>
    <div class="card-body">{{this.summary}}</div>
    <div class="card-body">Comments
      {{this.comments}}
      <form>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Add a Comment:</label>
          <textarea class="form-control" id="comment" rows="1"></textarea>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <br>
  {{/each}}
</ul>
</div>